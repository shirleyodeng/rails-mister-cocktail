<div class="container">
  <h1>Add a new dose</h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <div class="form-group">
      <%= f.input :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.association :ingredient, class: 'form-control' %>
    </div>
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "Cancel", cocktail_path(@cocktail), {:class=>"btn btn-danger"} %>
  <% end %>
</div>

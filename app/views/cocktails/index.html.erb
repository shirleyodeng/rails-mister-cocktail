<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.2) 20%), url('<%= cl_image_path "photo-1513614825922-8fdb7f6ee617" %>');">
  <div>
    <h1>SIP ME BABY ONE MORE TIME</h1>
    <div class="banner-bar"></div>
    <p>a collection of delicious cocktails</p>
  </div>
  <div class="text-center" id="banner-arrow">
    <%= link_to '#cocktails' do %>
      <h3>discover</h3>
      <i class="fas fa-chevron-down"></i>
    <% end %>
  </div>
</div>
<div class="home-wrapper">
  <div class="container text-center" id="cocktails">
    <h2 class="cards-title">Cocktails</h2>
    <div class="cards">
      <div class="row">
        <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <%= link_to cocktail_path(cocktail) do  %>
              <div class="card">
                <%= cl_image_tag(cocktail.photo, width: 265, height: 350, crop: :fill) %>
                <div class="card-name"><%= cocktail.name.capitalize %></div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

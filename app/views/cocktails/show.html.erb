<div class="container">
  <div class="cocktail-card">
    <h1 class="cocktail-name text-right"><%= @cocktail.name %></h1>
    <div class="cocktail-content">
      <%= image_tag(@cocktail.image_url, class: "cocktail-image") %>
      <ul>
        <div class="cocktail-ingredients">
          <% @cocktail.doses.each do |dose| %>
            <li class="list-unstyled">
              <%= dose.description %> of <%= dose.ingredient.name %>
              <%= link_to dose_path(dose), method: :delete do %>
                <i class="fas fa-times"></i>
              <% end %>
            </li>
          <% end %>
          <%= simple_form_for [@cocktail, @dose] do |f| %>
            <div class="form-group">
              <%= f.input :description, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.association :ingredient, class: 'form-control' %>
            </div>
            <%= f.button :submit, class: "btn btn-primary" %>
          <% end %>
        </div>
      </ul>
    </div>
    <%= link_to "Back to cocktails", cocktails_path %>
  </div>
</div>


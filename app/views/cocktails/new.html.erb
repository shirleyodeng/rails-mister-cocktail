<div class="container">
  <h1>Add a new cocktail</h1>
  <%= simple_form_for(@cocktail) do |f| %>
    <div class="form-group">
      <%= f.input :name, class: 'form-control' %>
    </div>
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "Cancel", :back, {:class=>"btn btn-danger"} %>
  <% end %>
</div>

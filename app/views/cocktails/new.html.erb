<div class="form-background" style="background-image: url('https://images.unsplash.com/photo-1486428263684-28ec9e4f2584');">
  <div class="form-container text-center">
    <div class="new-form">
      <h1>Add a new cocktail</h1>
      <%= simple_form_for(@cocktail) do |f| %>
        <div class="form-group">
          <%= f.input :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.input :image_url, class: 'form-control' %>
        </div>
        <%= f.button :submit, class: "btn btn-primary" %>
        <%= link_to "Cancel", :back, {:class=>"btn btn-danger"} %>
      <% end %>
    </div>
  </div>
</div>
